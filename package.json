{
	"description": "VSCode TextMate grammar helpers",
	"devDependencies": {
		"@types/mocha": "^9.1.0",
		"@types/node": "^16.6.1",
		"copy-webpack-plugin": "^9.1.0",
		"mocha": "^9.2.2",
		"typescript": "^4.3.5",
		"typescript-esbuild": "0.4.5",
		"vscode-oniguruma": "^1.5.1",
		"webpack": "^5.50.0",
		"webpack-cli": "^4.8.0"
	},
	"main": "./release/main.js",
	"name": "vscode-textmate",
	"scripts": {
